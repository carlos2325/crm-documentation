  "related_applications": [
    {
      "platform": "web",
      "url": "https://carlos2325.github.io/crm-documentation/"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+crm",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/markdown": [".md"],
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications",
    "background-sync",
    "storage"
  ],
  "features": [
    "Cross Platform",
    "Offline Support",
    "Search Functionality",
    "Dark Mode",
    "Responsive Design",
    "GraphQL API",
    "React Components",
    "TypeScript Support"
  ],
  "author": {
    "name": "Marketing Soluciones",
    "email": "equipo@marketingsoluciones.com",
    "url": "https://marketingsoluciones.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carlos2325/crm-documentation.git"
  },
  "keywords": [
    "CRM",
    "GraphQL",
    "React",
    "TypeScript",
    "Node.js",
    "MongoDB",
    "Documentation",
    "API",
